<div class="card">
     <div class="card-header bg-dark">
          <h3 class="card-title text-white">
               <i class="far fa-image"></i>
               Upload and Image
          </h3>
     </div>
     <div class="card-body">
          <form action="/images" method="POST" enctype="multipart/form-data">
               <div class="form-group">
                    <div class="input-group">
                         <div class="custom-file">
                              <input type="file" name="image" id="inputGroup" class="custom-file-input  "
                                   aria-describedby="inputGroupFileAddon" required>
                              <label class="custom-file-label" for="inputGruopFile">Choose File</label>
                         </div>

                    </div>
               </div>
               <div class="form-group"><input class="form-control" type="text" name="title" id="title"
                         placeholder="title for the image" required>


               </div>

               <div class="form-group">
                    <textarea name="description" id="description" class="form-control" rows="2"
                         placeholder="Description for the image" required></textarea>

               </div>

               <div class="form-group">
                    <button class="btn btn-success">
                         <i class="fa fa-upload"> </i> Upload Image
                    </button>
               </div>
          </form>
     </div>
</div>
<div class="card mt-2">
     <div class="card-header bg-dark text-white">
          <h3><i class="far fa-images"></i> Recent Upload</h3>
     </div>
     <div class="card-body">
          <div class="row">
               {{#each images}}
               <div class="col-md-4">
                    <a href="images/{{uniqueID}}">
                         <img src='/public/upload/{{filename}}' alt="" class="w-100 h-100 img-thumbmail">
                    </a>

               </div>
               {{/each}}
          </div>
     </div>
</div>
